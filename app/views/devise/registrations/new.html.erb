<div class="container container-padding">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 login-area">
      <h2 class="text-center">新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "shared/error_messages", object: resource %>

        <div class="field login-field">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", style: "width: 100%;" %>
        </div>


        <div class="field login-field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%;" %>
        </div>

        <div class="field login-field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%;" %>
        </div>

        <div class="field login-field">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%;" %>
        </div>

        <div class="actions login-field">
          <%= f.submit "会員登録", class: "btn btn-warning", style: "width: 100%;" %>
        </div>
      <% end %>
      <div class="text-center login-field">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
