<div class="container container-padding">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 new-post">
			<h3 class="text-center">ブログ記事の新規作成</h3>
			<%= form_with(model: @blog, url: blogs_path, local: true) do |f| %>
				<div class="row">
					<div class="col-sm-8 col-sm-offset-2">
						<%= render 'shared/error_messages', object: f.object %>
						<div class="form-group">
							<h4><%= f.label :title, "タイトル" %></h4>
							<%= f.text_area :title, rows: "2", style: "width: 100%;" %>
						</div>
						<div class="form-group">
							<h4><%= f.label :content, "本文" %></h4>
							<%= f.text_area :content, id: "blog_text"  %>
						</div>
						<div class="form-group">
							<h5><%= "スペースを入力することで複数のタグを付けることができます。" %>
								<span><%= "例：料理　豆知識　日記" %></span>
							</h5>
							<%= f.text_area :name, rows: "2", style: "width: 100%;" %>
						</div>
						<div class="text-center">
							<%= f.submit "記事作成", class: "btn btn-warning btn-lg" %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
<script>
	new FroalaEditor('#blog_text', {});
</script>


